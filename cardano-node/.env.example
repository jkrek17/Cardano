# Cardano network to connect to (mainnet, testnet, etc.)

NETWORK=mainnet

# Port to expose for the Cardano node

PORT=3001

# Base directory for persistent Cardano data
# Replace with your preferred data directory path
# Example: /home/user/cardano/data (Linux/macOS) or C:\cardano\data (Windows)

DATA_DIR=/path/to/cardano/data

# Directory for IPC socket
# Replace with your preferred IPC directory path
# Example: /home/user/cardano/ipc (Linux/macOS) or C:\cardano\ipc (Windows)

IPC_DIR=/path/to/cardano/ipc

# Memory limit for the Cardano node container

MEMORY_LIMIT=8g

# CPU limit for the Cardano node container

CPU_LIMIT=2

# Grafana admin password
# Replace with a secure password of your choice

GRAFANA_ADMIN_PASSWORD=your_secure_password_here